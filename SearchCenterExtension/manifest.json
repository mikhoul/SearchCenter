{
  "name": "Search Center",
  "version": "5.1.0",
  "description": "Quickly Search & re-search multiple sites without having to type your search terms again and again",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "chrome://favicon/"
    
  ],
  "browser_action": {
    "default_icon": "images/spinWorld.png",
    "default_popup": "popup.html",
    "default_title": "Search Center"
  },
  "manifest_version": 2,
  "background": {
    "page": "background.html"
  },
  // "background": {
  //   "scripts": [
  //     "js/common.js",
  //     "js/engines.js",
  //     "js/engine.js",
  //     "js/engineGroup.js",
  //     "js/imageCache.js",
  //     "js/notify.js",
  //     "js/search.js",
  //     "background.js"
  //   ]
  // },
  "minimum_chrome_version": "6",
  "options_page": "options.html",
  "icons": {
    "128": "images/spinWorld.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://mycroft.mozdev.org/*"
      ],
      "js": [
        "contentScripts/mycroft.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/spinWorld.png"
  ]
}